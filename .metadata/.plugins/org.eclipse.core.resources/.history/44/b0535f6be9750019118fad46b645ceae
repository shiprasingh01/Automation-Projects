package pages;

import java.util.List;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;


public class DropDownPage {
	WebDriver driver;
	
	By dynamicTab = By.xpath("//*[@id=\'toggleNav\']/li[5]/a");
	By dropdown = By.xpath("//*[@id=\'toggleNav\']/li[5]/ul/li[2]/a");
	By countryBlock = By.xpath("//html/body/select");

	public DropDownPage(WebDriver driver) {
		this.driver = driver;
	}

	public List<String> getCountryNames() {
		//driver.switchTo().defaultContent();
		//driver.switchTo().frame(1);
		driver.findElement(dynamicTab).click();
		driver.findElement(dropdown).click();
		driver.switchTo().frame(1);
		List<WebElement> countries = driver.findElements(By.tagName("option"));
		List<String> countryNames = null;
		for (WebElement country : countries) {
			countryNames.add(country.getAttribute("value"));
		}
		return countryNames;
	}

}
