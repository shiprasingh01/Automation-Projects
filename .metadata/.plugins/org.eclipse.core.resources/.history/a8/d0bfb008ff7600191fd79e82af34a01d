package pages;

import java.util.List;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.interactions.Actions;
import org.openqa.selenium.support.ui.Select;

public class DropDownPage {
	WebDriver driver;

	By dynamicTab = By.xpath("//*[@id=\'toggleNav\']/li[5]/a");
	By dropDown = By.xpath("//*[@id=\'toggleNav\']/li[5]/ul/li[2]/a");
	By country = By.xpath("/html/body/select");
	

	public DropDownPage(WebDriver driver) {
		this.driver = driver;
	}

	public List<String> getCountryNames() {
		driver.switchTo().frame(1);
		WebElement dynamicElement = driver.findElement(dynamicTab);
		Actions action = new Actions(driver);
		action.moveToElement(dynamicElement).moveToElement(driver.findElement(dropDown)).click().perform();

		// driver.switchTo().defaultContent();
		driver.switchTo().frame(1);
		List<WebElement> countries = driver.findElements(By.tagName("option"));
		List<String> countryNames = null;
		for (WebElement country : countries) {
			countryNames.add(country.getAttribute("value"));
		}
		return countryNames;
	}

}
